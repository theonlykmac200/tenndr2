    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <link rel="stylesheet" href="./style.css" />
    <style>
      body {
        margin: 50px 100px;
        background-color: rgb(2, 76, 2);
        color: white;
      }
      .row {
        margin: 0 auto;
        width: 40%;
      }
      h1{
        margin: center;
        text-align: center;
        font-size: 35px;
      }
      .notes-box{
        width: 500px;
        height: 200px;
      }
      button, a {
        text-decoration-style: none;
        color: white;
        text-shadow: .1em .1em .0em black;
    
    }
    .logo-container {
    height: 200px;
    width: 400px;
  }
