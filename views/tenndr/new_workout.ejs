<body>

  <div class="logo-container">
    <img src="/img/tenndr_logo.png" alt="logo" height="100px" width="200px"/>
  </div>
        <h1>New Workout</h1>
        <div class="new-tenndr-container">
            <div class="row">
                <form action="/tenndr" method="POST">
                    <div class="input-field">
                        <span class="bolded">Workout Focus</span><input type="text" name="workout"/></br>
                        <span class="bolded">Sets</span><input type="text" name="sets"/></br>
                        <span class="bolded">Reps</span><input type="text" name="reps"/></br>
                        <span class="bolded">Difficulty</span><input type="text" name="difficulty" /></br>
                        <span class="bolded">Duration</span><input type="text" name="duration_in_mins" /></br>
                        <span class="bolded">Mood before</span><input type="text" name="mood_before"/></br>
                        <span class="bolded">Mood after</span><input type="text" name="mood_after"/></br>
                        <span class="bolded">Notes:</span><textarea name="description"></textarea><br />
                    
                    <input class="waves-effect amber waves-light btn" type="submit" name="" value="Add Workout"/>
                </form>  
                    <button class="waves-effect amber waves-light btn"><a href="/tenndr">Go Home</a></button>
                    <form class="waves-effect amber waves-light btn" action="/sessions?_method=DELETE" method="POST">
                        <input type="submit" value="Log Out" />
                    </form>
            </div>
        </div>


    </body>